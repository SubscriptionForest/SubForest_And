<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAF8">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="구독숲"
            android:textSize="22sp"
            android:textColor="#020202"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="모든 구독, 한 눈에 관리하세요"
            android:textSize="14sp"
            android:textColor="#8D92A3" />
    </LinearLayout>

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="255dp"
        android:layout_height="255dp"
        android:layout_below="@id/header_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_subforest2" />

    <LinearLayout
        android:id="@+id/form_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/main_image"
        android:layout_marginTop="30dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이메일 주소"
            android:textSize="16sp"
            android:textColor="#020202" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/input_outline"
            android:paddingStart="10dp"
            android:hint="구독숲@naver.com"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textSize="16sp"
            android:textColor="#020202" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/input_outline"
            android:paddingStart="10dp"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/loginBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="12dp"
            android:text="로그인"
            android:textSize="14sp"
            android:textColor="#020202"
            android:backgroundTint="#B8DDA1" />

        <Button
            android:id="@+id/registerBtn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="새 계정 만들기"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#8D92A3" />

    </LinearLayout>
</RelativeLayout>